                <Cursor fx:constant="HAND" />
            </cursor>
            <effect>
                <Glow level="0.4" />
            </effect>
            <graphic>
                <SVGPath content="M15 19l-7-7 7-7" style="-fx-stroke: white; -fx-stroke-width: 2.5; -fx-fill: transparent;" />
            </graphic>
            <tooltip>
                <Tooltip text="Saioa itxi" />
