        </ImageView>

        <Button fx:id="atzeraBotoia" layoutX="25.0" layoutY="25.0" onAction="#saioaItxi" prefHeight="45.0" prefWidth="45.0" style="-fx-background-color: #F5322F; -fx-background-radius: 25; -fx-border-color: transparent;">
