<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.shape.SVGPath?>

<?import java.lang.String?>
<?import javafx.scene.text.Text?>
<BorderPane xmlns="http://javafx.com/javafx/17.0.2"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Pantailak.MahaiakController"
            style="-fx-background-color: #f8fafc;">

    <top>
        <VBox spacing="0">
            <HBox spacing="15" alignment="CENTER_LEFT"
                  style="-fx-background-color: white; -fx-padding: 15 20; -fx-border-color: #e2e8f0; -fx-border-width: 0 0 1 0;">

                <Button fx:id="atzeraBotoia" onAction="#atzeraBueltatu"
                        prefHeight="40"
                        prefWidth="40"
                        style="-fx-background-color: #4a5568; -fx-background-radius: 20; -fx-cursor: hand;">
                    <graphic>
                        <SVGPath content="M15 19l-7-7 7-7"
                                 style="-fx-stroke: white; -fx-stroke-width: 2; -fx-fill: transparent;"/>
                    </graphic>
                    <tooltip>
                        <Tooltip text="Atzera menu nagusira"/>
                    </tooltip>
                </Button>

                <Label text="Mahaiak"
                       style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #2d3748;"/>

                <Pane HBox.hgrow="ALWAYS"/>

                <HBox spacing="8" alignment="CENTER_RIGHT">
                    <TextField fx:id="txtBilaketa"
                               promptText="Bilatu mahai zenbakiagatik..."
                               prefWidth="200"
                               style="-fx-background-radius: 5; -fx-border-radius: 5;"/>

                    <Button text="ðŸ”„"
                            onAction="#kargatuMahaiak"
                            style="-fx-background-color: #4a5568; -fx-text-fill: white; -fx-background-radius: 5; -fx-cursor: hand; -fx-padding: 8 12;">
                        <tooltip>
                            <Tooltip text="Freskatu mahai zerrenda"/>
                        </tooltip>
                    </Button>

                    <Button fx:id="btnGorde"
                            text="Berria"
                            onAction="#mahaiBerriaSortu"
                            style="-fx-background-color: #38a169; -fx-text-fill: white; -fx-background-radius: 5; -fx-cursor: hand; -fx-padding: 8 15;">
                        <tooltip>
                            <Tooltip text="Mahai berria gehitu"/>
                        </tooltip>
                    </Button>

                    <Button fx:id="btnDelete"
                            text="Ezabatu"
                            onAction="#ezabatuMahaiBotoia"
                            style="-fx-background-color: #e53e3e; -fx-text-fill: white; -fx-background-radius: 5; -fx-cursor: hand; -fx-padding: 8 15;">
                        <tooltip>
                            <Tooltip text="Hautatutako mahai ezabatu"/>
                        </tooltip>
                    </Button>
                </HBox>
            </HBox>

            <HBox spacing="10" alignment="CENTER_LEFT"
                  style="-fx-background-color: #f7fafc; -fx-padding: 10 20; -fx-border-color: #e2e8f0; -fx-border-width: 0 0 1 0;">

                <Label text="Filtratu:" style="-fx-text-fill: #4a5568; -fx-font-weight: bold;"/>

                <ComboBox fx:id="egoeraFilter"
                          prefWidth="150"
                          promptText="Egoera"
                          style="-fx-background-radius: 5;"/>

                <ComboBox fx:id="ordenatuFilter"
                          prefWidth="150"
                          promptText="Ordenatu"
                          style="-fx-background-radius: 5;"/>

                <Pane HBox.hgrow="ALWAYS"/>

                <Label fx:id="mahaiKopuruaLabel"
                       text="0 mahai"
                       style="-fx-text-fill: #718096; -fx-font-size: 14;"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <SplitPane dividerPositions="0.7" style="-fx-padding: 15;">
            <VBox spacing="10">
                <TableView fx:id="tblMahaiak" onMouseClicked="#onMahaiSelected"
                           style="-fx-background-color: white; -fx-border-color: #e2e8f0; -fx-border-width: 1; -fx-background-radius: 5;">
                    <columns>
                        <TableColumn fx:id="colId" text="ID" prefWidth="80">
                            <style>
                                <String fx:value="-fx-alignment: CENTER;"/>
                            </style>
                        </TableColumn>

                        <TableColumn fx:id="colZenbakia" text="Mahai Zenbakia" prefWidth="150">
                            <style>
                                <String fx:value="-fx-alignment: CENTER;"/>
                            </style>
                        </TableColumn>

                        <TableColumn fx:id="colPertsonaMax" text="Pertsona Max" prefWidth="150">
                            <style>
                                <String fx:value="-fx-alignment: CENTER;"/>
                            </style>
                        </TableColumn>

                        <TableColumn fx:id="colEgoera" text="Egoera" prefWidth="150">
                            <style>
                                <String fx:value="-fx-alignment: CENTER;"/>
                            </style>
                        </TableColumn>
                    </columns>

                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
            </VBox>

            <VBox spacing="20"
                  style="-fx-background-color: white; -fx-padding: 20; -fx-border-color: #e2e8f0; -fx-border-width: 1; -fx-background-radius: 5;">
                <Label fx:id="lblEditMode" text="Mahai berria"
                       style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #2d3748;"/>

                <Separator style="-fx-padding: 0 0 10 0;"/>

                <VBox spacing="15">
                    <VBox spacing="5">
                        <Label text="ID" style="-fx-font-weight: bold; -fx-text-fill: #4a5568;"/>
                        <TextField fx:id="txtId"
                                   editable="false"
                                   style="-fx-background-color: #f1f5f9; -fx-background-radius: 5; -fx-border-radius: 5; -fx-padding: 8;"/>
                    </VBox>

                    <VBox spacing="5">
                        <Label text="Mahai Zenbakia *" style="-fx-font-weight: bold; -fx-text-fill: #4a5568;"/>
                        <TextField fx:id="txtZenbakia"
                                   style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-padding: 8;"/>
                    </VBox>

                    <VBox spacing="5">
                        <Label text="Pertsona Maximoak *" style="-fx-font-weight: bold; -fx-text-fill: #4a5568;"/>
                        <ComboBox fx:id="cmbPertsonaMax"
                                  style="-fx-background-radius: 5; -fx-padding: 8;"/>
                    </VBox>

                    <VBox spacing="5">
                        <Label text="Egoera" style="-fx-font-weight: bold; -fx-text-fill: #4a5568;"/>
                        <Label fx:id="lblEgoera" text="Libre"
                               style="-fx-font-size: 14; -fx-text-fill: #38a169; -fx-font-weight: bold; -fx-padding: 8; -fx-background-color: #f0fff4; -fx-background-radius: 5; -fx-border-color: #c6f6d5; -fx-border-width: 1; -fx-border-radius: 5;"/>
                    </VBox>
                </VBox>

                <VBox spacing="15" style="-fx-padding: 20 0 0 0;">
                    <Label text="Ekintzak" style="-fx-font-weight: bold; -fx-text-fill: #4a5568;"/>

                    <HBox spacing="10" alignment="CENTER">
                        <Button fx:id="btnSave"
                                text="Gorde"
                                onAction="#gordeMahai"
                                prefWidth="100"
                                style="-fx-background-color: #38a169; -fx-text-fill: white; -fx-background-radius: 5; -fx-cursor: hand; -fx-padding: 10;"/>

                        <Button fx:id="btnEguneratu"
                                text="Eguneratu"
                                onAction="#eguneratuMahai"
                                prefWidth="100"
                                style="-fx-background-color: #3182ce; -fx-text-fill: white; -fx-background-radius: 5; -fx-cursor: hand; -fx-padding: 10;"/>

                        <Button fx:id="btnCancel"
                                text="Utzi"
                                onAction="#mahaiBerriaSortu"
                                prefWidth="100"
                                style="-fx-background-color: #a0aec0; -fx-text-fill: white; -fx-background-radius: 5; -fx-cursor: hand; -fx-padding: 10;"/>
                    </HBox>

                    <Separator style="-fx-padding: 10 0;"/>

                    <VBox spacing="5">
                        <Label text="Oharra" style="-fx-font-weight: bold; -fx-text-fill: #d69e2e;"/>
                        <Text text="Mahai bat editatzeko, hautatu taulan eta erabili goiko botoiak."
                              style="-fx-fill: #718096; -fx-font-size: 12; -fx-wrap-text: true;"/>
                    </VBox>
                </VBox>
            </VBox>
        </SplitPane>
    </center>

    <bottom>
        <HBox spacing="20" alignment="CENTER_LEFT"
              style="-fx-background-color: white; -fx-padding: 15 20; -fx-border-color: #e2e8f0; -fx-border-width: 1 0 0 0;">

            <VBox spacing="5">
                <Label text="Mahai totalak" style="-fx-text-fill: #718096; -fx-font-size: 12;"/>
                <Label fx:id="totalMahaiakLabel" text="0"
                       style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #2d3748;"/>
            </VBox>

            <Separator orientation="VERTICAL" prefHeight="30"/>

            <VBox spacing="5">
                <Label text="Okupatuta" style="-fx-text-fill: #718096; -fx-font-size: 12;"/>
                <Label fx:id="okupatutaLabel" text="0"
                       style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #e53e3e;"/>
            </VBox>

            <VBox spacing="5">
                <Label text="Libre" style="-fx-text-fill: #718096; -fx-font-size: 12;"/>
                <Label fx:id="libreLabel" text="0"
                       style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #38a169;"/>
            </VBox>

            <VBox spacing="5">
                <Label text="Gehieneko pertsona" style="-fx-text-fill: #718096; -fx-font-size: 12;"/>
                <Label fx:id="gehienekoLabel" text="0"
                       style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #805ad5;"/>
            </VBox>

            <Pane HBox.hgrow="ALWAYS"/>

            <Button text="Estatistikak"
                    onAction="#eguneratuEstatistikak"
                    style="-fx-background-color: #805ad5; -fx-text-fill: white; -fx-background-radius: 5; -fx-cursor: hand; -fx-padding: 8 15;">
                <tooltip>
                    <Tooltip text="Eguneratu estatistikak"/>
                </tooltip>
            </Button>
        </HBox>
    </bottom>
</BorderPane>