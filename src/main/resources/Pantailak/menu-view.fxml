<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.SVGPath?>

<AnchorPane prefHeight="800.0" prefWidth="1500.0"
            style="-fx-background-color: WHITE;"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Pantailak.MenuController">

    <children>

        <!-- LOGO CENTRADO -->
        <ImageView fitHeight="420"
                   fitWidth="900"
                   layoutX="300"
                   layoutY="120"
                   preserveRatio="true">
            <image>
                <Image url="@../Irudiak/Logo_Osis_Management.png"/>
            </image>
        </ImageView>

        <!-- BOTÃ“N SALIR -->
        <Button fx:id="atzeraBotoia"
                layoutX="40"
                layoutY="40"
                prefHeight="48"
                prefWidth="48"
                onAction="#saioaItxi"
                style="
                    -fx-background-color: #1D505B;
                    -fx-background-radius: 30;
                    -fx-border-color: transparent;">
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
            <effect>
                <Glow level="0.3"/>
            </effect>
            <graphic>
                <SVGPath content="M15 19l-7-7 7-7"
                         style="-fx-stroke: #F5F5F5; -fx-stroke-width: 2.5; -fx-fill: transparent;"/>
            </graphic>
            <tooltip>
                <Tooltip text="Saioa itxi"/>
            </tooltip>
        </Button>

        <!-- BOTONERA INFERIOR -->
        <Button fx:id="btnLangileak"
                layoutX="460"
                layoutY="600"
                prefWidth="140"
                prefHeight="44"
                text="Langileak"
                onAction="#onLangileakClick"
                style="
                    -fx-background-color: #1D505B;
                    -fx-text-fill: #F5F5F5;
                    -fx-font-family: 'Segoe UI';
                    -fx-font-size: 14px;
                    -fx-background-radius: 8;"/>

        <Button fx:id="btnOsagaiak"
                layoutX="610"
                layoutY="600"
                prefWidth="140"
                prefHeight="44"
                text="Osagaiak"
                onAction="#onOsagaiakClick"
                style="
                    -fx-background-color: #1D505B;
                    -fx-text-fill: #F5F5F5;
                    -fx-font-family: 'Segoe UI';
                    -fx-font-size: 14px;
                    -fx-background-radius: 8;"/>

        <Button fx:id="btnEskaerak"
                layoutX="760"
                layoutY="600"
                prefWidth="140"
                prefHeight="44"
                text="Eskaerak"
                onAction="#onEskaerakClick"
                style="
                    -fx-background-color: #F3863A;
                    -fx-text-fill: #FFFFFF;
                    -fx-font-family: 'Segoe UI';
                    -fx-font-size: 14px;
                    -fx-font-weight: bold;
                    -fx-background-radius: 8;"/>

        <Button fx:id="btnHornitzaileak"
                layoutX="910"
                layoutY="600"
                prefWidth="140"
                prefHeight="44"
                text="Hornitzaileak"
                onAction="#onHornitzaileakClick"
                style="
                    -fx-background-color: #1D505B;
                    -fx-text-fill: #F5F5F5;
                    -fx-font-family: 'Segoe UI';
                    -fx-font-size: 14px;
                    -fx-background-radius: 8;"/>

        <Button fx:id="btnPlaterak"
                layoutX="1060"
                layoutY="600"
                prefWidth="140"
                prefHeight="44"
                text="Platerak"
                onAction="#onPlaterakClick"
                style="
                    -fx-background-color: #1D505B;
                    -fx-text-fill: #F5F5F5;
                    -fx-font-family: 'Segoe UI';
                    -fx-font-size: 14px;
                    -fx-background-radius: 8;"/>

    </children>
</AnchorPane>
