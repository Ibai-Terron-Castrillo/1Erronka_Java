<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<AnchorPane
        xmlns="http://javafx.com/javafx/25"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="Pantailak.LoginController"
        prefHeight="400.0" prefWidth="600.0"
        style="-fx-background-color: #F7F4F8;">

    <children>

        <VBox
                layoutX="150"
                layoutY="60"
                spacing="25"
                prefWidth="300"
                alignment="CENTER">

            <children>

                <Label
                        text="OSIS MANAGEMENT"
                        textFill="#5C1A55"
                        alignment="CENTER"
                        style="-fx-font-weight: bold;">
                    <font>
                        <Font size="26" />
                    </font>
                </Label>

                <TextField
                        fx:id="erabiltzailea"
                        promptText="Erabiltzailea"
                        prefWidth="250"
                        style="
                        -fx-background-radius: 8;
                        -fx-border-radius: 8;
                        -fx-border-color: #72226B;
                        -fx-border-width: 1.5;
                        -fx-focus-color: #F28A2E;"
                />

                <PasswordField
                        fx:id="pasahitza"
                        promptText="Pasahitza"
                        prefWidth="250"
                        style="
                        -fx-background-radius: 8;
                        -fx-border-radius: 8;
                        -fx-border-color: #72226B;
                        -fx-border-width: 1.5;
                        -fx-focus-color: #F28A2E;"
                />

                <HBox spacing="20" alignment="CENTER">
                    <children>
                        <Button
                                fx:id="irten"
                                text="Irten"
                                prefWidth="100"
                                style="
                                    -fx-background-color: transparent;
                                    -fx-border-color: #5C1A55;
                                    -fx-text-fill: #5C1A55;
                                    -fx-border-radius: 6;
                                    -fx-background-radius: 6;"
                                onAction="#irten" />

                        <Button
                                fx:id="sartu"
                                text="Sartu"
                                prefWidth="100"
                                style="
                                    -fx-background-color: #F28A2E;
                                    -fx-text-fill: white;
                                    -fx-background-radius: 6;
                                    -fx-border-radius: 6;"
                                onAction="#saioaHasi" />
                    </children>
                </HBox>

            </children>

        </VBox>

    </children>

</AnchorPane>
